<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left">Lists of Staff Grades</h2>
	</div>
	<div class="tlist">
	    <table width=90% border="0" cellpadding="0" cellspacing="0">
		  <tr>
    <th>Grade Code</th>
    <th>Grade Name</th>
    <th>Grade Short Name</th>
    <th>Grade level</th>
   <th colspan=3 class="ac">Control</th>
  </tr>

<% @staffgrades.each do |staffgrade| %>
  <tr>
    <td><%=h staffgrade.sgcode %></td>
    <td><%=h staffgrade.sgname %></td>
    <td><%=h staffgrade.sgshortname %></td>
    <td><%=h staffgrade.sglevel %></td>
    <td><%= link_to 'Show', staffgrade %></td>
    <td><%= link_to 'Edit', edit_staffgrade_path(staffgrade) %></td>
    <td><%= link_to 'Destroy', staffgrade, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


<%= link_to 'New Staffgrade', new_staffgrade_path %>