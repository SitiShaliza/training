<div class="tform">
<table width=100%>
	<tr>
		<th colspan=2>Subject</td>
	</tr>
	<tr>
		<td class="leftcol"><label for="subjectcode">Subject Code:</label></td>
		<td><%=h @subject.subjectcode %></td>
	</tr>
	
	
	<tr>
		<td class="leftcol"><label for="name">Subject Name:</label></td>
		<td><%=h @subject.name %></td>
	</tr>
	
	
	<tr>
		<td class="leftcol"><label for="credit">Credit:</label></td>
		<td><%=h @subject.credit %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="status">Status:</label></td>
		<td><%=h (Subject::STATUS.find_all{|disp, value| value == @subject.status.to_s}).map {|disp, value| disp} %></td>
	</tr>
	</table>
	<table width=70%>
	<tr>
		<th colspan=2>Topic</td>
	</tr>
	
	<% for topic in @subject.topics %>
	
	<tr>
		<td class="leftcol"><label for="name">Topic Name:</label></td>
        <td><%=h topic.name %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="sequenceno">Sequence No:</label></td>
        <td><%=h topic.sequenceno %></td>
	</tr>
	
	<td></td>
	
	<% end %>
</table>
<BR>
</div>

<%= link_to 'Edit', edit_subject_path(@subject) %> |
<%= link_to 'Back', subjects_path %>