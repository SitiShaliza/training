<h1>New employgrade</h1>

<% form_for(@employgrade) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
		<%= f.select :group_id,
				          Employgrade::GROUP,
				          :prompt => "Select"%>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', employgrades_path %>