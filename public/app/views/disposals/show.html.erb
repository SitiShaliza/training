<div class="tform">
	<H2><%= t 'disposal.disposal_details' %></H2>
  <table width=100% >
			<tr>
				<td class="leftcol"><label for="asset_id"><b><%= t 'disposal.asset_id' %> :</b></label></td>
				<td><%=h @disposal.asset_id.blank? ? "" : @disposal.asset.assetcode %></td>
			</tr>
			<tr>
				<td class="leftcol"><label for="asset_id"><b><%= t 'disposal.asset_description' %> :</b></label></td>
				<td><%=h @disposal.asset.typename %> / <%=h @disposal.asset.name %> / <%=h @disposal.asset.modelname %></td>
			</tr>	
			
			<tr>
				<td class="leftcol"><label for="used"><b><%= t 'disposal.purchasedt' %> :</b></label></td>
				<td><%=h @disposal.asset.purchasedate.strftime("%d %B %Y") unless @disposal.asset.purchasedate.blank? %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="used"><b><%= t 'disposal.used' %> :</b></label></td>
				<td><%=h @disposal.used? ? "Used" : "New" %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="usedduration"><b><%= t 'disposal.usedduration' %> :</b></label></td>
				<td><%=h @disposal.age %> days</td>
			</tr>
			
			<tr>
				<td class="leftcol"><label for="currentvalue"><b><%= t 'disposal.purchasedt' %> :</b></label></td>
				<td><%=h ringgols(@disposal.asset.purchaseprice) %> <%=  %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="currentvalue"><b><%= t 'disposal.currentvalue' %> :</b></label></td>
				<td><%=h ringgols(@disposal.currentvalue) %></td>
			</tr>
			
			<tr>
				<td class="leftcol"><label for="currentvalue"><b><%= t 'disposal.depreciation' %> :</b></label></td>
				<td><%=h ringgols(@disposal.depreciation_value) %> OR <%= number_to_percentage(@disposal.depreciation_percent, :precision => 2) %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="opinion"><b><%= t 'disposal.opinion' %> :</b></label></td>
				<td><%=h @disposal.opinion %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="recommendation"><b><%= t 'disposal.recommendation' %> :</b></label></td>
				<td><%=h @disposal.recommendation %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="gift"><b><%= t 'disposal.gift' %>:</b></label></td>
				<td><%=h @disposal.gift? ? "Gift" : "No" %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="status"><b><%= t 'disposal.status' %>:</b></label></td>
				<td><%=h @disposal.status? ? (t 'disposal.pending') : (t 'disposal.disposed') %></td>
			</tr>
	
</table>
<BR>
</div>
	
<%= link_to 'Edit', edit_disposal_path(@disposal) %> |
<%= link_to 'Back', disposals_path %>