<div class="tform">
<H2><%= t 'book.book_details' %></H2>
  <table width=100% border=0>
		<tr>
			<td ></td>
			<td ></td>
			<td ></td>
			<td ></td>
		<td align=right rowspan=9><% if @book.photo.exists? then %>
		  <%= image_tag (@book.photo.url, :size => '150x200') %>
		<% else %>
		  No Photo<BR>Available
		<% end %></td>
		</tr>
		<tr>
			<td width=20%><label for="isbn"><font size=2>&nbsp;ISBN No</font></label></td>
			<td width=3%><b>:</b></td>
			<td><%=h @book.isbn %></td>
		</tr>
		<tr>
			<td class="leftcol"><label for="issn">ISSN</label></td>
			<td ><b>:</b></td>
			<td><%=h @book.issn %></td>
		</tr>
		<tr>
			<td class="leftcol"><label for="bookcode">Library Code</label></td>
			<td><b>:</b></td>
			<td><%=h @book.bookcode %></td>
		</tr>
		<tr>
			<td class="leftcol"><label for="catsource">Catalouging Source To</label></td>
			<td><b>:</b></td>
			<td><%=h (Book::CATSOURCE.find_all{|disp, value| value == @book.catsource.to_i}).map {|disp, value| disp} %></td>
		</tr>
		
		<tr>
			<td class="leftcol"><label for="classlcc">Class No (NLM)</label></td>
			<td><b>:</b></td>
			<td><%=h @book.classlcc %></td>
		</tr>
		<tr>
			<td class="leftcol"><label for="classddc">Class No (DDC)</label></td>
			<td><b>:</b></td>
			<td><%=h @book.classddc %></td>
		</tr>
	
		<tr>
			<td class="leftcol"><%= t 'book.title' %></td>
			<td><b>:</b></td>
			<td><%=h @book.title %></td>
		</tr>
		<tr>
			<td class="leftcol"><%= t 'book.language' %></td>
			<td><b>:</b></td>
			<td><%=h (Book::LANGUAGE.find_all{|disp, value| value == @book.language}).map {|disp, value| disp} %></td>
		</tr>
	
	 	<tr>
			<td class="leftcol"><%= t 'book.author' %></td>
			<td><b>:</b></td>
			<td><%=h @book.author %></td>
		</tr>
		<tr>
			<td class="leftcol"><%= t 'book.subject' %></td>
			<td><b>:</b></td>
			<td><%=raw sanitize(simple_format(@book.subject), :tags => %w(br p) ) %></td>
		</tr>

		<tr>
			<td class="leftcol"><%= t 'book.publisher' %></td>
			<td><b>:</b></td>
			<td><%=h @book.publisher %></td>
		</tr>

		<tr>
			<td class="leftcol"><label for="description">Physical Description:</label></td>
			<td><b>:</b></td>
			<td class="leftcol"><%= t 'book.roman' %> &nbsp;:  <%=h @book.roman %></td>
		</tr>
		<tr>
			<td class="leftcol"></td>
			<td><b>:</b></td>
			<td class="leftcol"><%= t 'book.size' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: <%=h @book.size %></td>
		</tr>

		<tr>
			<td class="leftcol"></td>
			<td><b>:</b></td>
			<td class="leftcol"><%= t 'book.pages' %> &nbsp;&nbsp;&nbsp;: <%=h @book.pages %></td>
		</tr>
		
		<tr>
			<td class="leftcol"><%= t 'book.publish_date' %></td>
			<td><b>:</b></td>
			<td><%=h @book.publish_date%></td>
		</tr>
	
		
		<tr>
			<td class="leftcol"><%= t 'book.publish_location' %></td>
			<td><b>:</b></td>
			<td><%=h @book.publish_location %></td>
		</tr>
	
	
		<tr>
			<td class="leftcol"><label for="description">Bilbliography</label></td>
			<td><b>:</b></td>
			<td><%=h @book.bibliography %></td>
		</tr>
		<tr>
			<td class="leftcol"><label for="description">Index</label></td>
			<td><b>:</b></td>
			<td><%=h @book.indice %></td>
		</tr>
		
		<tr>
			<td class="leftcol"><%= t 'book.notes' %></td>
			<td><b>:</b></td>
			<td><%=h @book.notes %></td>
		</tr>
		<tr>
			<td class="leftcol"><label for="status">Status</label></td>
			<td><b>:</b></td>
			<td><%=h (Book::STATUS.find_all{|disp, value| value == @book.status}).map {|disp, value| disp} %></td>
		</tr>
		
		<tr>
			<td class="leftcol"><label for="loantype">Loan Type:</label></td>
			<td><b>:</b></td>
			<td><%=h (Book::LOAN.find_all{|disp, value| value == @book.loantype}).map {|disp, value| disp} %></td>
		</tr>
		<tr>
			<td class="leftcol"><label for="mediatype"><%= t 'book.mediatype' %>:</label></td>
			<td>:</td>
			<td><%=h (Book::MEDIA.find_all{|disp, value| value == @book.mediatype}).map {|disp, value| disp} %></td>
		</tr>
		
		<tr>
			<td class="leftcol"><label for="series">Series</label></td>
			<td><b>:</b></td>
			<td><%=h @book.series %></td>
		</tr>
		<tr>
			<td class="leftcol"><label for="edition">Edition</label></td>
			<td><b>:</b></td>
			<td><%=h @book.edition %></td>
		</tr>
	
		<tr>
			<td class="leftcol"><%= t 'book.links' %></td>
			<td><b>:</b></td>
			<td><%= auto_link(@book.links) %></td>
		</tr>
		<tr>
			<td class="leftcol">Quantity</td>
			<td><b>:</b></td>
			<td><%=h @book.book_quantity %></td>
		</tr>
	</table>
<H2>Book Accession No</H2>
		<table width=70% border=1 cellspacing=0 cellpadding=5 BORDERCOLOR="#E8E8E8 ">
			<tr>
				<th width=15% align="center"><label for="name ">Accession No</label></th>
				<th width=40% align="center"><label for="name ">Shelf Location</label></th>
				<th width=15% align="center"><label for="name ">Status</label></th>
			</tr>
			<% for accession in @book.accessions %>
			<tr>
				
						
				<td><%=h accession.accession_no.blank? ? "" : accession.accession_no %> </td>
				<td><%=h accession.order_no.blank? ? "" : accession.order_no %></td>
				<td align="center"><%=h (Accession::STATUS.find_all{|disp, value| value == accession.received_by}).map {|disp, value| disp} %></td>
					
			</tr>
				<% end %>
		</table>
	
<% permitted_to? :manage, :books do %>
<H2><%= t 'book.purchase_info' %></H2>
<table width=100%>	
		<tr>
			<td width=20%><label for="orderno"><font size=2>&nbsp;Order No</font></label></td>
			<td><b>:</b></td>
			<td><%=h @book.orderno %></td>
		</tr>
		<tr>
			<td class="leftcol"><label for="purchaseprice">Purchase Price</label></td>
			<td><b>:</b></td>
			<td><%=h ringgols(@book.purchaseprice) %></td>
		</tr>
			
		<tr>
			<td class="leftcol"><label for="purchasedate">Purchase Date</label></td>
			<td><b>:</b></td>
			<td><%=h @book.purchasedate %></td>
		</tr>
		<tr>
			<td class="leftcol"><label for="receiveddate">Date Received</label></td>
			<td><b>:</b></td>
			<td><%=h @book.receiveddate %></td>
		</tr>
				
		<tr>
			<td class="leftcol"><label for="receiver_id">Received By</label></td>
			<td><b>:</b></td>
			<td><%=h @book.receiver_id.blank? ? "" : @book.staff.name %></td>
		</tr>
		<tr>
			<td class="leftcol"><label for="supplier_id">Supplier Name</label></td>
			<td><b>:</b></td>
			<td><%=h @book.supplier_id.blank? ? "" : @book.addbook.name %></td>
		</tr>
		
	</table>
	<% end %>
</div>
<BR>
<% permitted_to? :manage, :books do %>
<%= link_to (t 'icms.update'), edit_book_path(@book) %> |
<% end %>
<%= link_to (t 'icms.back'), books_path %>