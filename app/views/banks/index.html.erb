<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left">Lists of Banks</h2>
	</div>
	</div>
	<div class="tlist">
	    <table width=100% border="0" cellpadding="0" cellspacing="0">
		  <tr>
    		<th>Short name</th>
		    <th>Long name</th>
		    <th>Active</th>
    <th colspan=3 class="ac">Control</th>
  </tr>


<% @banks.each do |bank| %>
  <tr>
    <td><%=h bank.short_name %></td>
    <td><%=h bank.long_name %></td>
   <td><%=h bank.active? ? "Yes" : "No" %></td>
    <td width=10px><%= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id => bank %></td>
	  <td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => 'Edit'), :action => 'edit', :id => bank %></td>
	<!--  <td width=10px><#%= link_to image_tag("delete.png", :border => 0, :title => 'Delete'), bank, :confirm => 'Are you sure?', :method => :delete %></td>-->
  </tr>
<% end %>
</table>
</div>
<br />

<%= link_to 'New Bank', new_bank_path %>