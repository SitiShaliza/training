<div class="box">
	<div class="box-head">
		<h2 class="left">Exam Maker</h2>
	</div>
</div>

<div class="tlist">
	<table width=100% border="0" cellpadding="0" cellspacing="0">
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Creator</th>
			 <th colspan=3 class="ac">Control</th>
		</tr>

		<% @exammaker_subjects.each do |exam_result, exammakers| %>
	    <tr>
	      <td colspan=12><BR> <b><%=h exam_result %><b></td>
	   	</tr>

				<% for exammaker in exammakers %>
<tr>
	<td><%=h exammaker.name %></td>
	<td><%=h exammaker.description %></td>
	<td><%=h exammaker.creatorpaper_details %></td>
	<td width=10px><%= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id => exammaker %></td>
	<td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => 'Edit'), :action => 'edit', :id => exammaker %></td>
	<td width=10px><%= link_to image_tag("printer.png",   :border => 0, :title => 'Exam Paper'), :action => 'exampaper', :id => exammaker %></td>
	<td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => 'Delete'), exammaker, :confirm => 'Are you sure?', :method => :delete %></td>
</tr>
<% end %>
<%end %>
</table>

<br />
</div>

<%= link_to 'New Exam Maker', new_exammaker_path %>