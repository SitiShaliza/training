

<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>

<div class="tform">
	<H2>Sign Up</H2>
  <table width=100% >
	<tr>
		<td class="leftcol"><label for="login">Login</label></td>
		<td width=3%><b>:</b></td>
		<td><%= f.text_field :login, :placeholder => 'Login Name' %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="email">Email</label></td>
		<td><b>:</b></td>
		<td><%= f.text_field :email, :placeholder => 'Email' %><font color="grey", size="-2"> example: abc@yahoo.com.my </font></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="password">Password</label></td>
		<td><b>:</b></td>
		<td><%= f.text_field :password, :placeholder => 'Password' %><font color="grey", size="-2"> minimum 6 characters</font></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="password_confirmation">Confirm Password</label></td>
		<td><b>:</b></td>
		<td><%= f.text_field :password_confirmation, :placeholder => 'Confirm Password' %></td>
	</tr>

	<tr>
		<td colspan=2></td>
		<td><%= f.radio_button :isstaff,'true' %>Staff &nbsp<%= f.radio_button :isstaff,'false' %>Student</td>
	</tr>
</table>


</div>
<BR>
<%= submit_tag 'Sign up' %>

<% end -%>