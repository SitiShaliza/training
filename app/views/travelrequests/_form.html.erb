<div class="tform">
<H2><%= t 'travel.staff_details' %></H2>
<table width=100% border=0 cellspacing=0>
		<tr>
			<td  colspan=2 width=20%><label for="staff_id"><%= t 'travel.sname' %></label><font color="red"> * </font></td>
			<td width=2%><b>:</b></td>
			<td><%= f.collection_select :staff_id, Staff.find(:all), :id, :staff_name_with_title, :include_blank => true %></td>
		</tr>

</table>
<H2><%= t 'travel.travel_details' %></H2>
<table width=100% border=0 cellspacing=0>

	<tr>
		<td class="leftcol" colspan=2><label for="destination"><%= t 'travel.destination' %></label><font color="red"> * </font></td>
		<td><b>:</b></td>
		<td><%= f.text_field :destination, :size => '60' %></td>
	</tr>

	<tr>
	    <td class="leftcol" colspan=2><label for="purpose"><%= t 'travel.purpose' %></label><font color="red"> * </font></td>
		<td><b>:</b></td>
		<td><%= f.text_area :purpose, :size => '60x2' %></td>
	</tr>
	
	<tr>
		 <td class="leftcol" colspan=2><label for="tstartdt"><%= t 'travel.tstartdt' %></label></td>
		 <td><b>:</b></td>
		 <td><%= f.date_select :tstartdt, :start_year => 2010, :end_year => 2020, :order => [:day, :month, :year] %></td>
	</tr>
		
	<tr>
		<td class="leftcol" colspan=2><label for="treturndt"><%= t 'travel.treturndt' %></label></td>
		<td><b>:</b></td>
		<td><%= f.date_select :treturndt, :start_year => 2010, :end_year => 2020, :order => [:day, :month, :year] %></td>
	</tr>
	
	<tr>
		<td class="leftcol" colspan=2><label for="bplreserve"><%= t 'travel.bplreserve' %></label></td>
		<td><b>:</b></td>
		<td><%= f.radio_button :transport_travel,'1' %><%= t 'travel.owncar' %><%= f.radio_button :transport_travel,'2' %><%= t 'travel.ofiscar' %>
			<%= f.radio_button :transport_travel,'3' %><%= t 'travel.others' %><%= f.radio_button :transport_travel,'4' %><%= t 'travel.train' %>
			<%= f.radio_button :transport_travel,'5' %><%= t 'travel.flight' %><%= f.radio_button :transport_travel,'6' %><%= t 'travel.public' %>
		</td>
	</tr>
	</table>
<H2>Used Own Car</H2>
	 <div>
	
		 <% f.fields_for :traveldetails do |builder| %>
			<%= render 'traveldetail_fields', :f => builder %>
		 <% end %>
