<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left">Lists of Messaging</h2>
	</div>		
</div>

<div class="tlist">
	 <table width=100% border="0" cellpadding="0" cellspacing="0">
  <tr>
  	    <th>From</th>
		<th>To Whom</th>
		<th>Message</th>
		<th colspan=3 class="ac">Control</th>
  	 
  </tr>

<% @messages.each do |message| %>
<tr>
   	    <td><%=h message.from_staff  %></td>
	    <td><% for message_staffs in message.staffs %>
						<%=h message_staffs.staff_name_with_title %><br>
				<% end %>
				<!--27-29Apr2012--></td>
	    <td><%=h message.message %></td>
	    <td width=10px><%= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id => message %></td>
	    <td width=10px><%= link_to image_tag("edit.png",     :border => 0, :title => 'Edit'), :action => 'edit', :id => message %></td>
	    <td width=10px><%= link_to image_tag("delete.png",   :border => 0, :title => 'Delete'), message, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>

<% end %>
</table>
</div>
<br />

<%= link_to 'New Message', new_message_path %>