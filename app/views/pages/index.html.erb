<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left">Pages</h2>
		<div class="right">
			<% form_tag pages_path, :method => 'get' do %>
			<%= text_field_tag :search, params[:search] %>
			<%= submit_tag I18n.t('search'), :navlabel => nil %>
			<% end %>
		</div></div>
</div>

    <div class="tlist">
  	<table width=100% border="0" cellpadding="0" cellspacing="0">
        <tr>
	        
	        <th>Position</th>
	        <th>Nav Label</th>
          <th>Name</th>
          <th>Admin</th>
          <th>Redirect</th>
          <th colspan=3 class="ac">Control</th>
        </tr>

        <% @pages.each do |page| %>
        <tr>
	        <td width=5%><%=h page.position %></td>
	        <td><%=h page.navlabel %></td> 
          <td><%=h page.name %></td>
          <td><%=  page.admin? ? "Yes" : "No" %></td>
          <td><%=  page.redirect? ? "Yes" : "No" %></td>
          <td width=10px ><%= link_to image_tag("document.png", :border => 0), :action => 'show', :id => page %></td>
		  <td width=10px><%= link_to image_tag("edit.png", :border => 0), :action => 'edit', :id => page %></td>
		  <td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => 'Delete'), page, :confirm => 'Are you sure?', :method => :delete %></td>
        </tr>
        <% end %>
</table>

<br />
</div>
<%= link_to 'New Page', new_page_path %>

