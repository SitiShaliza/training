<div class="tform">
<h2>Booking Vehicle Details</h2>
  <table width=100% >
	
	<tr>
		<td class="leftcol"><label for="applicant">Applicant Name</label></td>
		<td><b>:</b></td>
		<td><%= f.collection_select :applicant, Staff.find(:all, :conditions => ["id = ?", current_user.staff_id]), :id, :staff_name_with_title %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="apply_date">Request Date</label></td>
		<td><b>:</b></td>
		<td><%= f.date_select :apply_date, :start_year => 2012, :end_year => 2030, :order => [:day, :month, :year]  %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="used_date">Used Date</label></td>
		<td><b>:</b></td>
		<td><%= f.date_select :used_date, :start_year => 2012, :end_year => 2030, :order => [:day, :month, :year]  %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="returned_date">Returned Date</label></td>
		<td><b>:</b></td>
		<td><%= f.date_select :returned_date, :start_year => 2012, :end_year => 2030, :order => [:day, :month, :year]  %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="active">Purpose / Location</label></td>
		<td><b>:</b></td>
		<td><%= f.text_area :location, :size => "30x2" %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="applicant">Driver Name</label></td>
		<td><b>:</b></td>
		<td><%= f.collection_select :driver_name, Staff.find(:all), :id, :staff_name_with_title, :include_blank => true %></td>
	</tr>

	<tr>
		<td class="leftcol"><label for="applicant">Endorser Name</label></td>
		<td><b>:</b></td>
		<td><%= f.collection_select :endorse_name, Staff.find(:all, :conditions => ["id = 66"]), :id, :staff_name_with_title %></td>
	</tr>
</table>	

<BR>
</div>