<% form_for(@bookingvehicle) do |f| %>
  <%= f.error_messages %>

<div class="tform">
<%= render :partial => 'show_applicant' %>
<h2>Vehicle Officer Details</h2>
  <table width=100% >
  
	<tr>
		<td class="leftcol"><label for="approved">Approved?</label></td>
		<td width=3%><b>:</b></td>
		<td><%= f.radio_button :approved,'1' %>Approved<%= f.radio_button :approved,'2' %>Not Approved</td></tr>
	
	<tr>
		<td class="leftcol"><label for="applicant">Vehicle Name</label></td>
		<td><b>:</b></td>
		<td><%= f.collection_select :vehicle_id, Officecar.find(:all), :id, :car, :include_blank => true %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="used_date">Approved Date</label></td>
		<td><b>:</b></td>
		<td><%= f.date_select :approved_date, :start_year => 2012, :end_year => 2030, :order => [:day, :month, :year], :include_blank => true  %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="used_date">Remark</label></td>
		<td><b>:</b></td>
		<td><%= f.text_area :remark_approver, :size => "30x4" %></td>
	</tr>
			
</table>

  <p>
    <%= f.submit (t 'icms.update') %>
  </p>

<% end %>
</div>

<%= link_to (t 'icms.show'), @bookingvehicle %> |
<%= link_to (t 'icms.back'), bookingvehicles_path %>