			<th width=10% style="vertical-align:middle">JUMLAH DENDA (RM)</th>
	  </tr>
	
	<% bil = 0 %>
	<%  @libtran_borrowers.each do |ru_staff, librarytransactions| %>
	 <% bil += 1 %>
	
	    <tr>
	      <td colspan=12><% if ru_staff == true %><b>STAF PLAMM</b><% else %><b> PELATIH </b><% end %></td>
	   	</tr>

				<% for librarytransaction in librarytransactions %>
    <tr>
		<td align="center"><%=h bil %></td>	
		<td ><%=h librarytransaction.ru_staff? ?  librarytransaction.staff_details : librarytransaction.student_details %></td>	
		<td align="center"><%=h librarytransaction.title_details %></td>
		<td align="center" ><%=h librarytransaction.checkoutdate.blank? ? "-" : librarytransaction.checkoutdate.strftime("%d-%b-%Y") %></td>
		<td align="center"><%=h librarytransaction.returnduedate.blank? ? "-" : librarytransaction.returnduedate.strftime("%d-%b-%Y") %> </td>
		<td align="center"><%=h librarytransaction.overdue_book %></td>
		<td align="center"><%=h librarytransaction.overdue_fine %></td>
	</tr>
<% end %><% end %>

</table>

