<table width=100% border=1px cellspacing=0 cellpadding =5 align="center" >

		<tr >
			<th width=2%  style="vertical-align:middle" font face="Arial">BIL</th>
			<th width=25% style="vertical-align:middle">NAMA PEMINJAM</th>
			<th width=20% style="vertical-align:middle">TAJUK BUKU</th>
			<th width=15% style="vertical-align:middle">TARIKH PINJAM</th>
			<th width=15% style="vertical-align:middle">TARIKH PULANG</th>
