<h3>Editing Employ Grade</h3>

<% form_for(@employgrade) do |f| %>
  <%= f.error_messages %>

  <div class="tform">
<H2>Employ Grade Details</H2>
  <table width=100% >
  
  <tr>
	<td class="leftcol"><label for="name ">Code Grade</label></td>
	<td>Group</td>
</tr>

<tr>
	<td> <%= f.text_field :name %></td>
	<td><%= f.select :group_id,
				          Employgrade::GROUP,
				          :prompt => "Select"%></td>
</tr>

</table>
</div>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @employgrade %> |
