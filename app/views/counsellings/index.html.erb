<!-- Box -->
<div class="box">
<!-- Box Head -->
  <div class="box-head">
    <h2 class="left">Counseling Sessions</h2>
	<div class="right">
		</div></div></div>

<div class="tlist">
<table width=100% border="0" cellpadding="2" cellspacing="0">
  
  <tr>
 	 <th width=100>Appointment No</th>
 	  <th>Issue</th>
    <th width=200>Session Date </th>
    <th width=100>Session Time</th>
   
      <th colspan=3 class="ac">Control</th>
  </tr>

<% @counsellings.each do |counselling| %><!--07/11/2011 - Shaliza fixed for student and file no longer exist.Also changed icon for delete-->
  <tr>
    <td colspan=7><b><%=h counselling.student_details %></b></td>
   
  </tr>
    
 
   <% for scsession in counselling.scsessions %>
  <tr>
    <td><%=h scsession.scsappointnum %></td>
    <td><%=h scsession.issue %></td>
    <td><%=h scsession.scsessiondt.blank? ? "-": scsession.scsessiondt.strftime(" %A,  %d %B %Y ") %></td>
    <td><%=h scsession.scsessiondtduration.strftime("%I:%M %p") %></td>
  <!--  <td><%=h counselling.file_details %></td>-->
    <td width=10px ><%= link_to image_tag("document.png", :border => 0), :action => 'show', :id => counselling %></td>
    <td width=10px ><%= link_to image_tag("edit.png", :border => 0), :action => 'edit', :id => counselling %></td>
    <td width=10px ><%= link_to image_tag("delete.png",   :border => 0, :title => 'Delete'), counselling, :confirm => 'Are you sure?', :method => :delete %></td>
   <% end %> <% end %>
  </tr>

</table>
</div>
