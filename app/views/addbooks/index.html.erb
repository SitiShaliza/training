<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left">Lists of Suppliers</h2>
	</div>
</div>
<div class="indextable">
	<table>
		<tr>
	    <th>Name</th>
	    <th>Phone</th>
	    <th>Fax</th>
	    <th>Address</th>
	    <th>Mail</th>
	    <th>Web</th>
	    <th colspan=3 class="ac">Control</th>
  </tr>
	<% @addbooks.each do |addbook| %>
  <tr>
    <td><%=h addbook.name %></td>
    <td><%=h addbook.phone %></td>
    <td><%=h addbook.fax %></td>
    <td><%=h addbook.address %></td>
    <td><%=h addbook.mail %></td>
    <td><%=h addbook.web %></td>

    <td width=10px><%= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id => addbook %></td>
    <td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => 'Edit'), :action => 'edit', :id => addbook %></td>
    <td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => 'Delete'), addbook, :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Contact', new_addbook_path %>

</div>