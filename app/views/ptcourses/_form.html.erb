<div class="tform"><!--09/12/2011 - Shaliza changed title bar-->
	<H2><%= t 'ptcourse.courses_details' %></H2>
<table width=100% border=0 cellspacing=0>	

	
	<tr>
		<td class="leftcol"><label for="name"><%= t 'ptcourse.name' %></label></td>
		<td width=2%><b>:</b></td>
		<td> <%= f.text_field :name, :size => '40' %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="name">Branch</label></td>
		<td width=2%><b>:</b></td>
		<td> <%= f.text_field :branch, :size => '40' %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="course_type"><%= t 'ptcourse.course_type' %></label></td>
		<td width=2%><b>:</b></td>
		<td><%= f.select :course_type,
		                 Ptcourse::COURSE_TYPE,
		                 :prompt => "Select" %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="provider"><%= t 'ptcourse.provider' %></label></td>
		<td width=2%><b>:</b></td>
		<td><%= f.collection_select :provider, Addbook.find(:all), :id, :name, :prompt => "Select", :include_blank => true %></td>
	</tr>
	
	
	<tr>
		<td class="leftcol"><label for="duration"><%= t 'ptcourse.duration' %></label></td>
		<td width=2%><b>:</b></td>
		<td><%= f.text_field :duration, :size => '5' %>
			<%= f.select :duration_type, 
			              Ptcourse::DUR_TYPE, 
			              :prompt => "Select" %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="provider">Allowance Speaker</label></td>
		<td width=2%><b>:</b></td>
		<td><%= f.text_field :allowance_speaker, :size=>12, :placeholder => "RM" %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="provider">Meals & Hospitality</label></td>
		<td width=2%><b>:</b></td>
		<td><%= f.text_field :meals, :size=> 12, :placeholder => "RM" %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="description"><%= t 'ptcourse.description' %></label></td>
		<td width=2%><b>:</b></td>
		<td><%= f.text_area :description, :size => '40x8' %></td>
	</tr>
	
	<!--<tr>
		<td class="leftcol"><label for="cost"><%= t 'ptcourse.cost' %></label></td>
		<td width=2%><b>:</b></td>
		<td><%= f.text_field :cost, :size => '10', :placeholder => 'RM' %></td>
	</tr>-->


    <% permitted_to? :approve, :ptcourses do %>

	<tr>
		<td class="leftcol"><label for="approved"><%= t 'ptcourse.approved' %>?</label></td>
		<td width=2%><b>:</b></td>
		<td><%= f.check_box :approved %></td>
	</tr>

<% end %>
</table>
</div>