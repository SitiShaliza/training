<div class="box">
	<div class="box-head">
		<h2 class="left">Lists of Roles</h2>
	</div>
</div>
<div class="tlist">
	<table width=100% border="0" cellpadding="0" cellspacing="0">
		<tr>
    	<th>Name</th>
			<th colspan=3 class="ac">Control</th>
  	</tr>

		<% @roles.each do |role| %>
  	<tr>
    	<td><%=h role.name %></td>
    	<td width=10px ><%= link_to image_tag("document.png", :border => 0), :action => 'show', :id => role %></td>
		<td width=10px><%= link_to image_tag("edit.png",     :border => 0, :title => 'Edit'), :action => 'edit', :id => role %></td>
		<td width=10px><%= link_to image_tag("delete.png",   :border => 0, :title => 'Delete'), role, :confirm => "Are you sure you want to delete?", :method => :delete %></td>
  	</tr>
		<% end %>
	</table>
</div>

<br />

<%= link_to 'New Role', new_role_path %>