<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left">Lists of Titles</h2>
	</div></div>
	<div class="tlist">
	    <table width=100% border="0" cellpadding="0" cellspacing="0">
		  <tr>
    <th>Title Code</th>
    <th>Name</th>
    <th>Berhormat</th>
    <th colspan=3 class="ac">Control</th>
  </tr>

<% @titles.each do |title| %>
  <tr>
    <td><%=h title.titlecode %></td>
    <td><%=h title.name %></td>
    <td><%=h title.berhormat? ? "Yes" : "No" %></td>
    <td width=10px><%= link_to image_tag("document.png", :border => 0), :action => 'show', :id => title %></td>
    <td width=10px><%= link_to image_tag("edit.png", :border => 0), :action => 'edit', :id => title %></td>
    <td width=10px><%= link_to image_tag("delete.png",   :border => 0, :title => 'Delete'), title, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
<br />

<%= link_to 'New Title', new_title_path %>